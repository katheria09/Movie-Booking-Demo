<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shekhar.com.moviebooking.SummaryActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:padding="10dp"
        android:drawableStart="@drawable/back"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:id="@+id/name"
        android:layout_marginTop="2dp"
        android:text="Padmaavat"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:id="@+id/rating_language"
        android:text="(U/A) | Hindi"
        android:textSize="14dp"
        android:paddingTop="1dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating_language"
        android:id="@+id/time"
        android:text="30 Jan , 9:30 PM"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:id="@+id/seats_selected"
        android:text="3 Seat Selected"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seats_selected"
        android:id="@+id/seats"
        android:text="A1 , A2, A3"
        android:textSize="14sp"
        android:paddingTop="1dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seats"
        android:id="@+id/payment_summery"
        android:text="Payment Summery"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_summery"
        android:id="@+id/Sub_total"
        android:text="Tickets Subtotal"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Sub_total"
        android:id="@+id/ticket_summery"
        android:text="Rs 220 X 1 Ticket"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Sub_total"
        android:id="@+id/ticket_amount"
        android:text="Rs 220"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ticket_summery"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 220"
            android:padding="10dp"
            android:id="@+id/total"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRM BOOKING"
        android:background="@drawable/border_fill"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/book"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="15dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
