<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Hall Name INOX MALL"
        android:textSize="16sp"
        android:padding="5dp"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="1dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:background="@drawable/border_green"
        android:id="@+id/show1"
        android:text="9:45 AM"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:padding="4dp"/>


        <TextView
            android:id="@+id/show2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/show1"
            android:layout_alignBottom="@+id/show1"
            android:layout_toEndOf="@+id/show1"
            android:background="@drawable/border_green"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:text="10:45 AM"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/show3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/show2"
            android:layout_alignBottom="@+id/show2"
            android:layout_toEndOf="@+id/show2"
            android:background="@drawable/border_green"
            android:padding="4dp"
            android:layout_margin="5dp"
            android:text="11:30 AM"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/show4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/show3"
            android:layout_alignBottom="@+id/show3"
            android:layout_toEndOf="@+id/show3"
            android:background="@drawable/border_green"
            android:padding="4dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="3:00 PM"
            android:textColor="@color/green"
            android:textSize="14sp" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="1dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:background="@drawable/border_green"
            android:id="@+id/show5"
            android:textStyle="bold"
            android:text="5:30 PM"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:padding="4dp"/>


        <TextView
            android:id="@+id/show6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/show5"
            android:layout_alignBottom="@+id/show5"
            android:layout_toEndOf="@+id/show5"
            android:background="@drawable/border_green"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:text="6:30 PM"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/show7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/show6"
            android:layout_alignBottom="@+id/show6"
            android:layout_toEndOf="@+id/show6"
            android:background="@drawable/border_green"
            android:padding="4dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="9:00 PM"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/show8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/show7"
            android:layout_alignBottom="@+id/show7"
            android:layout_toEndOf="@+id/show7"
            android:background="@drawable/border_green"
            android:padding="4dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="10:00 PM"
            android:textColor="@color/green"
            android:textSize="14sp" />



    </RelativeLayout>
</LinearLayout>